@model ObjectDetection.Models.ImageUpload

<div class="container mt-5">
    <h1 class="mb-4">Upload an Image for Training</h1>
    <form asp-action="TrainFaceImage" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="UploadedImage">Choose an Image:</label>
            <input type="file" name="UploadedImage" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Upload and Detect</button>
    </form>

    <h1 class="mb-4">Upload an Image for Object Detection</h1>
    <form asp-action="ProcessFaceImage" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="UploadedImage">Choose an Image:</label>
            <input type="file" name="UploadedImage" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Upload and Detect</button>
    </form>

    @if (ViewBag.ImageDetails != null)
    {
        <div class="mt-5">
            <h2>@ViewBag.ImageDetails</h2>
        </div>
    }
</div>