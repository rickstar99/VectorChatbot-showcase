@model ObjectDetection.Models.ImageUpload

    <div class="container mt-5">
        <h1 class="mb-4">Upload an Image for Object Detection</h1>
        <form asp-action="Index" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="UploadedImage">Choose an Image:</label>
                <input type="file" name="UploadedImage" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Upload and Detect</button>
        </form>

        @if (ViewBag.ImagePath != null)
        {
            <div class="mt-5">
                <h2>Uploaded Image:</h2>
                <img src="@ViewBag.ImagePath" class="img-fluid" alt="Uploaded Image" />

                <h2 class="mt-3">Detected Objects:</h2>
                <ul>
                    @foreach (var obj in ViewBag.DetectedObjects as string[])
                    {
                        <li>@obj</li>
                    }
                </ul>
            </div>
        }
    </div>
